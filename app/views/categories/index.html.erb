<h1>Categories</h1>
<% if @categories.empty? %>
  <p>No categories added yet</p>
<% else %>
  <ul>
    <% @categories.each do |category| %>
      <li>
        <a href="<%= user_category_expenses_path(user_id: @user.id, category_id: category.id) %>">
          <%= render partial: 'shared/category_card', locals: { category: category } %>
        </a>
      </li>
    <% end %>
  </ul>
<% end %>
<%= link_to "Add Category", new_user_category_path %>