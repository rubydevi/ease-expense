<nav class="bg-primary text-white d-flex p-1" style="column-gap: 23%;">
  <div class="fs-1">
    <a href="<%= user_category_expenses_path %>" class="text-white">
      <i class="bi bi-arrow-left-short"></i>
    </a>
  </div>
  <h5  class="d-flex align-items-center mb-0">NEW EXPENSE</h5>
</nav>
<div class="container">
  <%= form_for @expense, url: user_category_expenses_path, method: :post do |f| %>
    <div class="form-floating mb-3">
      <%= f.text_field :name, class: "form-control", placeholder: "Name", required: true %>
      <%= f.label :name, class: "col-sm-2 col-form-label" %>
    </div>

    <div class="form-floating mb-3">
      <%= f.number_field :amount, class: "form-control", placeholder: "Amount", required: true %>
      <%= f.label :amount, class: "col-sm-2 col-form-label" %>
    </div>
    
    <div class="mb-3">
      <%= f.select :id,
        Category.all.map { |category| [category.name, category.id] },
        { include_blank: 'Category' },
        class: "form-select"
      %>
    </div>
    
    <div class="d-flex justify-content-center p-3 bg-success">
      <%= f.submit "Save", class: "btn btn-success w-100 p-2" %>
    </div>
  <% end %>
</div>